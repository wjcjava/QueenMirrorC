<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/mine_back_gray"
    tools:context="com.ainisi.queenmirror.queenmirrorcduan.ui.home.activity.MessageActivity">

    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:id="@+id/layout_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_title"
        android:paddingBottom="@dimen/comment_10_dip"
        android:background="@color/white"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_order"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/icon_home_submit" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_order"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:textSize="@dimen/comment_14_size"
            android:textColor="@color/alpha_90_black"
            android:layout_toEndOf="@+id/iv_order"
            android:text="订单消息" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/comment_12_size"
            android:layout_alignLeft="@id/tv_order"
            android:textColor="@color/message_text"
            android:text="暂无消息" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/layout_order"
        android:layout_width="match_parent"
        android:background="@color/alpha_05_black"
        android:layout_height="@dimen/comment_1_dip"
        />
    <RelativeLayout
        android:layout_below="@+id/view"
        android:id="@+id/layout_system"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/comment_10_dip"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_system"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/icon_home_xitong" />

        <TextView
            android:id="@+id/tv_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_system"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:textSize="@dimen/comment_14_size"
            android:textColor="@color/alpha_90_black"
            android:layout_toEndOf="@+id/iv_system"
            android:text="系统消息" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_system"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/comment_12_size"
            android:layout_alignLeft="@id/tv_system"
            android:textColor="@color/message_text"
            android:text="暂无消息" />
    </RelativeLayout>

    <View
        android:id="@+id/view_one"
        android:layout_below="@+id/layout_system"
        android:layout_width="match_parent"
        android:background="@color/alpha_05_black"
        android:layout_height="@dimen/comment_1_dip"
        />
    <RelativeLayout
        android:layout_below="@+id/view_one"
        android:id="@+id/layout_hudong"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/comment_10_dip"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hudong"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/hudong" />

        <TextView
            android:id="@+id/tv_hudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_hudong"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:textSize="@dimen/comment_14_size"
            android:textColor="@color/alpha_90_black"
            android:layout_toEndOf="@+id/iv_hudong"
            android:text="系统消息" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hudong"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/comment_12_size"
            android:layout_alignLeft="@id/tv_hudong"
            android:textColor="@color/message_text"
            android:text="暂无消息" />
    </RelativeLayout>

    <View
        android:id="@+id/view_two"
        android:layout_below="@+id/layout_hudong"
        android:layout_width="match_parent"
        android:background="@color/alpha_05_black"
        android:layout_height="@dimen/comment_1_dip"
        />
    <RelativeLayout
        android:layout_below="@+id/view_two"
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/comment_10_dip"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_commment"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/comment" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_commment"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:textSize="@dimen/comment_14_size"
            android:textColor="@color/alpha_90_black"
            android:layout_toEndOf="@+id/iv_commment"
            android:text="系统消息" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comment"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/comment_12_size"
            android:layout_alignLeft="@id/tv_comment"
            android:textColor="@color/message_text"
            android:text="暂无消息" />
    </RelativeLayout>

</RelativeLayout>
