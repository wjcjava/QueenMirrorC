<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/comment_48_dip">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingStart="@dimen/comment_10_dip"
        android:paddingTop="@dimen/comment_10_dip"
        android:paddingBottom="@dimen/comment_10_dip"
        android:paddingRight="@dimen/comment_10_dip"/>
    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_16_size"
        android:layout_centerInParent="true"
        android:lines="1"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        tools:ignore="EllipsizeMaxLines" />

    <ImageView
        android:id="@+id/title_photo"
        android:layout_width="@dimen/comment_13_dip"
        android:layout_height="@dimen/comment_15_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/comment_15_dip"
        android:src="@drawable/icon_full_fenxiang"
         />

    <TextView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/comment_16_size"
        android:enabled="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/comment_10_dip"/>
</RelativeLayout>