<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.mine.activity.MineBeautyActivity">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_below="@+id/ic_title"
        android:background="@color/alpha_05_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_80_dip"

        android:background="@color/white"
        android:gravity="center"
        android:text="活动描述——需要做成后台编辑"
        android:textColor="@color/alpha_90_black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_below="@id/tv_text"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="完善用户信息"
        android:textSize="@dimen/comment_14_size"
        android:textColor="@color/alpha_80_black"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_below="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_name"
            android:background="@drawable/et_shap"
            android:layout_marginTop="@dimen/comment_20_dip"
            android:layout_marginLeft="@dimen/comment_20_dip"
            android:layout_marginRight="@dimen/comment_20_dip"
            android:layout_width="match_parent"
            android:hint="@string/real_name"
            android:padding="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_12_size"
            android:layout_height="@dimen/comment_35_dip" />
        <EditText
            android:id="@+id/et_id"
            android:layout_below="@+id/et_name"
            android:background="@drawable/et_shap"
            android:layout_marginLeft="@dimen/comment_20_dip"
            android:layout_marginRight="@dimen/comment_20_dip"
            android:layout_marginTop="@dimen/comment_10_dip"

            android:layout_width="match_parent"
            android:hint="@string/id_card_no"
            android:padding="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_12_size"
            android:layout_height="@dimen/comment_35_dip" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_below="@id/et_id"
            android:background="@drawable/et_shap"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:layout_marginLeft="@dimen/comment_20_dip"
            android:layout_marginRight="@dimen/comment_20_dip"
            android:layout_width="match_parent"
            android:hint="@string/phone_number"
            android:padding="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_12_size"
            android:layout_height="@dimen/comment_35_dip" />
        <RadioGroup
            android:layout_marginTop="@dimen/comment_10_dip"
            android:layout_below="@id/et_phone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginLeft="@dimen/comment_20_dip"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/trained"
                android:textSize="@dimen/comment_12_size"
                android:textColor="@color/alpha_50_black"
                android:layout_height="wrap_content" />
            <RadioButton

                android:layout_weight="1"
                android:layout_marginRight="@dimen/comment_20_dip"
                android:layout_width="0dp"
                android:text="@string/untrained"
                android:textSize="@dimen/comment_12_size"
                android:textColor="@color/alpha_50_black"
                android:layout_height="wrap_content" />

        </RadioGroup>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
