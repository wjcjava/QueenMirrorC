<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer_fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:background="@color/white">

    <LinearLayout
        android:id="@+id/footer_ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:layout_height="@dimen/comment_45_dip">

        <ProgressBar
            android:id="@+id/footer_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:indeterminateDrawable="@drawable/rll_progress"
            tools:layout_height="@dimen/comment_18_dip"
            tools:layout_marginRight="@dimen/comment_8_dip"
            tools:layout_width="@dimen/comment_18_dip" />

        <TextView
            android:id="@+id/footer_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="@string/rll_footer_hint_normal"
            tools:textColor="@color/alpha_80_black"
            tools:textSize="@dimen/comment_14_size" />

    </LinearLayout>
</LinearLayout>