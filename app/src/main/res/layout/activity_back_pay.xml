<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.ainisi.queenmirror.queenmirrorcduan.ui.mine.activity.BackPayActivity">

    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/tv_back_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@id/ic_title"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:gravity="center"
        android:text="登录账号"
        android:textSize="@dimen/comment_14_size" />

    <EditText
        android:id="@+id/et_back_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@id/ic_title"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/tv_back_phone"
        android:background="@color/white"
        android:hint="@string/add_login_number"
        android:inputType="phone"
        android:maxLength="11"
        android:textSize="@dimen/comment_14_size" />

    <View
        android:id="@+id/v1_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/et_back_phone"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@color/alpha_20_black" />

    <TextView
        android:id="@+id/tv_back_loginpass"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@id/v1_pass"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:gravity="center"
        android:text="登录密码"
        android:textSize="@dimen/comment_14_size" />

    <EditText
        android:id="@+id/et_back_loginpass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@+id/v1_pass"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/tv_back_loginpass"
        android:background="@color/white"
        android:hint="@string/add_login_password"
        android:inputType="textPassword"
        android:textSize="@dimen/comment_14_size" />

    <View
        android:id="@+id/v2_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_back_loginpass"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@color/alpha_20_black" />

    <TextView
        android:id="@+id/tv_back_verification"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@id/v2_pass"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:gravity="center"
        android:text="@string/verification_code"
        android:textSize="@dimen/comment_14_size" />

    <EditText
        android:id="@+id/et_back_verification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@+id/v2_pass"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/tv_back_loginpass"
        android:background="@color/white"
        android:hint="@string/verification_code"
        android:inputType="number"
        android:textSize="@dimen/comment_14_size" />

    <TextView
        android:id="@+id/tv_validation"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/v2_pass"
        android:layout_marginEnd="@dimen/comment_21_dip"
        android:gravity="center"
        android:padding="5dp"
        android:text="获取验证码"
        android:textColor="@color/gray_E7370C"
        android:textSize="@dimen/comment_15_size" />

    <View
        android:layout_width="@dimen/comment_2_dip"
        android:layout_height="@dimen/comment_38_dip"
        android:layout_below="@id/v2_pass"
        android:layout_marginEnd="@dimen/comment_20_dip"
        android:layout_marginTop="@dimen/comment_8_dip"
        android:layout_toLeftOf="@id/tv_validation"
        android:background="@color/gray_E7370C" />

    <View
        android:id="@+id/v3_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_back_verification"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@color/alpha_20_black" />

    <TextView
        android:id="@+id/tv_back_cureenpass"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@id/v3_pass"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:gravity="center"
        android:text="@string/currentpaypass"
        android:textSize="@dimen/comment_14_size" />

    <EditText
        android:id="@+id/et_back_cureenpass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@+id/v3_pass"
        android:layout_marginStart="@dimen/comment_10_dip"

        android:layout_toRightOf="@id/tv_back_cureenpass"
        android:background="@color/white"
        android:hint="@string/add_currentpay_password"
        android:inputType="numberPassword|number"
        android:textSize="@dimen/comment_14_size" />

    <TextView
        android:id="@+id/text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_back_cureenpass"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="该密码用于银行卡，女王卡。钱包支付"
        android:textColor="@color/alpha_30_black"

        />

    <TextView

        android:id="@+id/tv_ok_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_45_dip"
        android:layout_below="@+id/text"
        android:layout_marginLeft="@dimen/comment_30_dip"
        android:layout_marginRight="@dimen/comment_30_dip"
        android:layout_marginTop="@dimen/comment_20_dip"
        android:background="@drawable/ic_setting_breake"
        android:gravity="center"
        android:text="@string/determine"
        android:textColor="@color/white" />
</RelativeLayout>
