<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/image_title"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:layout_width="@dimen/comment_37_dip"
            android:layout_height="@dimen/comment_37_dip"
            android:src="@drawable/icon_shop_service"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_marginTop="@dimen/comment_7_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/comment_14_size"
            android:text="汽车服务"
            />
</LinearLayout>