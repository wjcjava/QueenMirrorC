<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ainisi.queenmirror.queenmirrorcduan.ui.master.activity.WriteCommentActivity">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_master_title"/>
    <RelativeLayout
        android:layout_below="@id/ic_title"
        android:background="@color/alpha_05_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_comment"
            android:layout_marginTop="@dimen/comment_8_dip"
            android:layout_marginStart="@dimen/comment_15_dip"
            android:layout_width="@dimen/comment_300_dip"
            android:hint="写评论"
            android:paddingStart="@dimen/comment_15_dip"
            android:paddingTop="@dimen/comment_15_dip"
            android:gravity="top"
            android:textSize="@dimen/comment_15_size"
            android:background="@drawable/et_shap"
            android:layout_height="@dimen/comment_91_dip" />
        <ImageView
            android:id="@+id/iv_expend"
            android:layout_toRightOf="@id/et_comment"
            android:layout_marginTop="@dimen/comment_14_dip"
            android:layout_marginStart="@dimen/comment_5_dip"
            android:layout_width="@dimen/comment_15_dip"
            android:layout_height="@dimen/comment_15_dip"
            android:src="@drawable/icon_master_expand"
            />
        <TextView
            android:layout_below="@id/iv_expend"
            android:layout_toRightOf="@id/et_comment"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/comment_48_dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_5_dip"
            android:text="发送"
            android:textSize="@dimen/comment_15_size"
            />
    </RelativeLayout>

</RelativeLayout>
