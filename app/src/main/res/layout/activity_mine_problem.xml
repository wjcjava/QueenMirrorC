<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/comment_375_dip"
    android:layout_height="667dp"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ui.mine.activity.MineProblemActivity">

    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title" />
    <RelativeLayout
        android:layout_below="@+id/ic_title"
        android:background="@color/alpha_05_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_feedback"
        android:layout_width="@dimen/comment_375_dip"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_feedback"
            android:layout_width="@dimen/comment_7_dip"
            android:layout_height="@dimen/comment_12_dip"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/icon_full_right" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:layout_centerVertical="true"
            android:text="意见与反馈"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/comment_14_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_1_dip"
        android:layout_below="@id/layout_feedback" />

    <RelativeLayout
        android:id="@+id/layout_problem"
        android:layout_width="@dimen/comment_375_dip"
        android:layout_height="@dimen/comment_50_dip"
        android:layout_below="@+id/view"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_problem"
            android:layout_width="@dimen/comment_7_dip"
            android:layout_height="@dimen/comment_12_dip"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/icon_full_right" />

        <TextView
            android:id="@+id/tv_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_22_dip"
            android:text="@string/common_problem"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/comment_14_size"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>