<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/et_shap"
    android:layout_height="@dimen/comment_140_dip"
    android:layout_marginBottom="@dimen/comment_5_dip">
    <ImageView
        android:layout_width="@dimen/comment_110_dip"
        android:src="@drawable/icon_mondrl_shop"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/comment_15_dip"
        android:layout_height="@dimen/comment_110_dip" />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/comment_110_dip">
        <TextView
            android:id="@+id/tv_mondel_stores"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/comment_12_size"
            android:text="小张的门店小张的门店"
            android:layout_marginEnd="@dimen/comment_22_dip"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mondel_shopname"
            android:layout_below="@id/tv_mondel_stores"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/comment_2_dip"
            android:text="纯色美甲"
            android:layout_marginEnd="@dimen/comment_23_dip"
            android:layout_alignParentRight="true"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/comment_16_size"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mymondel"
            android:layout_marginTop="@dimen/comment_2_dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_mondel_shop"
            android:layout_below="@id/tv_mondel_shopname"
            android:text="50魔豆"
            android:gravity="center"
            android:textColor="@color/gray_E7370C"
            android:layout_marginEnd="@dimen/comment_21_dip"
            android:layout_width="@dimen/comment_73_dip"
            android:layout_height="@dimen/comment_25_dip"/>
        <TextView
            android:id="@+id/tv_mondel_original"
            android:layout_below="@id/tv_mymondel"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/comment_2_dip"
            android:text="原价¥398"
            android:textColor="@color/alpha_80_black"
            android:textSize="@dimen/comment_12_size"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv_mondel_original"
            android:layout_width="@dimen/comment_86_dip"
            android:layout_alignParentRight="true"
            android:text="我要兑换 >"
            android:gravity="center"
            android:layout_marginTop="@dimen/comment_2_dip"
            android:textColor="@color/white"
            android:background="@drawable/icon_mondel_exchange"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_height="@dimen/comment_25_dip"

            />
    </RelativeLayout>
</RelativeLayout>