<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="@dimen/comment_2_dip"
        android:background="@drawable/et_shap"
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="@dimen/comment_235_dip"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_mondel_shop"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:layout_width="@dimen/comment_130_dip"
            android:layout_height="@dimen/comment_130_dip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_mondrl_shop"
            />
        <TextView
            android:id="@+id/tv_mondel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纯色美甲"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:textSize="@dimen/comment_16_size"
            android:layout_below="@id/iv_mondel_shop"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_exchange"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_mon_exchange"
            android:layout_below="@id/tv_mondel_name"
            android:layout_width="@dimen/comment_125_dip"
            android:layout_height="@dimen/comment_23_dip"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/comment_7_dip"
            android:textSize="@dimen/comment_12_size"
            android:text="我的魔豆 | 我要兑换"
            />
        <TextView
            android:layout_below="@id/tv_exchange"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/comment_6_dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="原价 ¥ 998"
            android:textColor="@color/alpha_60_black"
            />
    </RelativeLayout>
</LinearLayout>