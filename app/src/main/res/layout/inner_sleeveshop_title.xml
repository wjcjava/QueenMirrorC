<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/Deepblue"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/ic_setting_breake"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_120_dip">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/comment_10_dip"
                    android:layout_marginLeft="@dimen/comment_10_dip"
                    android:layout_marginTop="@dimen/comment_25_dip"
                    android:paddingRight="@dimen/comment_10_dip"
                    app:srcCompat="@mipmap/icon_back" />
                <TextView
                    android:id="@+id/newtitle_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_back"
                    android:layout_marginTop="@dimen/comment_20_dip"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/comment_40_dip"
                    android:paddingTop="@dimen/comment_5_dip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/comment_18_size"
                    android:text="美手美甲"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:id="@+id/title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/comment_10_dip"
                    android:text="@string/complete"
                    android:visibility="gone"
                    android:textColor="@color/Dark_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/comment_10_dip"/>
                <RelativeLayout
                    android:layout_below="@id/newtitle_title"
                    android:background="@drawable/activity_shop_search_shape"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/comment_10_dip"
                    android:layout_marginStart="@dimen/comment_20_dip"
                    android:layout_marginBottom="@dimen/comment_9_dip"
                    android:layout_marginEnd="@dimen/comment_19_dip"
                    android:paddingEnd="@dimen/comment_20_dip"
                    android:layout_height="@dimen/comment_35_dip">

                        <ImageView
                            android:id="@+id/iv_keyword"
                            android:layout_width="@dimen/comment_30_dip"
                            android:layout_height="@dimen/comment_30_dip"
                            android:paddingLeft="@dimen/comment_10_dip"
                            android:layout_centerVertical="true"
                            app:srcCompat="@android:drawable/ic_search_category_default" />
                        <EditText
                            android:id="@+id/ed_keyword"
                            android:layout_toRightOf="@id/iv_keyword"
                            android:hint="请输入关键字搜索"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:paddingStart="@dimen/comment_10_dip"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:textSize="@dimen/comment_16_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </RelativeLayout>
        </RelativeLayout>


</RelativeLayout>