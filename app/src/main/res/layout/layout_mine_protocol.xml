<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/ck_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/comment_3_dip"
        android:layout_marginTop="@dimen/comment_12_dip"
        android:textSize="@dimen/comment_12_size"
        android:text="@string/reading_consent" />

    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ck_agree"
        android:layout_toEndOf="@+id/ck_agree"
        android:layout_marginTop="@dimen/comment_8_dip"
        android:textSize="@dimen/comment_12_size"
        android:text="@string/recharge_protocol"
        android:textColor="@color/alpha_95_black" />
    <Button
        android:layout_below="@id/tv_protocol"
        android:background="#FF66FF"
        android:text="确认支付"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_40_dip"
        android:id="@+id/button" />

    <TextView
        android:id="@+id/tV_seerecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ck_agree"
        android:layout_below="@+id/button"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="@string/view_the_recharge_record"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tV_seerecord"
        android:layout_below="@+id/tV_seerecord"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:text="@string/be_careful"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/comment_12_size" />

    <TextView
        android:id="@+id/tv_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_notes"
        android:layout_below="@+id/tv_notes"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="@string/recharge_activity" />

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_activity"
        android:layout_below="@+id/tv_activity"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:text="1、充值满500送200" />

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_one"
        android:layout_below="@+id/tv_one"
        android:text="2、充值满1000送500" />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_two"
        android:layout_below="@+id/tv_two"
        android:text="3、充值满2000送1200" />

    <TextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_three"
        android:layout_below="@+id/tv_three"
        android:text="4、充值满3000送1800" />


</RelativeLayout>