<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_collection"
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/comment_28_dip"
            android:layout_height="@dimen/comment_26_dip"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/icon_mine_collection" />

        <TextView
            android:textSize="@dimen/comment_10_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:text="@string/my_collection" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_follow"
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="@dimen/comment_28_dip"
            android:layout_height="@dimen/comment_26_dip"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/icon_mine_shop" />

        <TextView
            android:textSize="@dimen/comment_10_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:text="@string/follow_shop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_mine_homepage"
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="@dimen/comment_28_dip"
            android:layout_height="@dimen/comment_26_dip"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/icon_mine_message" />

        <TextView
            android:textSize="@dimen/comment_10_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:text="我的主页" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_evaluate"
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/comment_28_dip"
            android:layout_height="@dimen/comment_26_dip"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/icon_mine_evaluate" />

        <TextView
            android:textSize="@dimen/comment_10_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:text="@string/evaluate" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/linearLayout3">

        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_position"
                android:layout_width="@dimen/comment_28_dip"
                android:layout_height="@dimen/comment_26_dip"
                app:srcCompat="@drawable/icon_mine_address" />

            <TextView
                android:id="@+id/tv_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/my_address"
                android:textSize="@dimen/comment_10_size" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_foot"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_28_dip"
                android:layout_height="@dimen/comment_26_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/icon_mine_footprint" />

            <TextView
                android:textSize="@dimen/comment_10_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/my_Tracks" />

        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_friends"
                android:layout_width="@dimen/comment_28_dip"
                android:layout_height="@dimen/comment_26_dip"
                app:srcCompat="@drawable/icon_mine_friends" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"

                android:text="@string/myfriend"
                android:textSize="@dimen/comment_10_size" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/li_mine_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_mine_model"
                android:layout_width="@dimen/comment_28_dip"
                android:layout_height="@dimen/comment_26_dip"
                app:srcCompat="@drawable/icon_mine_model" />

            <TextView
                android:id="@+id/tv_mine_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/Modelshop"
                android:textSize="@dimen/comment_10_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>