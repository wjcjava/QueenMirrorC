<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_work_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="48"
        android:layout_marginTop="@dimen/comment_25_dip"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:textColor="@color/gray_E7370C"
        android:textSize="@dimen/comment_50_dip"
        />
    <TextView
        android:id="@+id/tv_comprehensive_score"
        android:layout_marginTop="@dimen/comment_27_dip"
        android:text="综合评分"
        android:textSize="@dimen/comment_18_size"
        android:layout_marginStart="@dimen/comment_6_dip"
        android:layout_toRightOf="@id/tv_work_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_shop"
        android:text="高于周边商家56%"
        android:layout_below="@id/tv_comprehensive_score"
        android:textSize="@dimen/comment_14_size"
        android:layout_marginStart="@dimen/comment_6_dip"
        android:layout_toRightOf="@id/tv_work_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:text="简单时间35分钟"
        android:layout_below="@id/tv_shop"
        android:textSize="@dimen/comment_12_size"
        android:layout_marginStart="@dimen/comment_6_dip"
        android:layout_toRightOf="@id/tv_work_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_toRightOf="@id/tv_work_credit"
        android:layout_width="@dimen/comment_2_dip"
        android:layout_marginTop="@dimen/comment_27_dip"
        android:background="@color/alpha_05_black"
        android:layout_marginStart="@dimen/comment_125_dip"
        android:layout_height="@dimen/comment_60_dip"/>
    <TextView
        android:id="@+id/tv_service_attitude"
        android:layout_toRightOf="@+id/tv_comprehensive_score"
        android:layout_marginTop="@dimen/comment_27_dip"
        android:text="综合评分"
        android:textSize="@dimen/comment_15_size"
        android:layout_marginStart="@dimen/comment_60_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_commodity_score"
        android:layout_toRightOf="@+id/tv_comprehensive_score"
        android:layout_below="@id/tv_service_attitude"
        android:text="商品评分"
        android:textSize="@dimen/comment_15_size"
        android:layout_marginStart="@dimen/comment_60_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_store_environment"
        android:layout_toRightOf="@+id/tv_comprehensive_score"
        android:layout_below="@id/tv_commodity_score"
        android:text="门店环境"
        android:textSize="@dimen/comment_15_size"
        android:layout_marginStart="@dimen/comment_60_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_service_attitude"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_20_dip"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_27_dip"
        android:layout_toRightOf="@id/tv_service_attitude"
        android:src="@drawable/ic_sortrecyke_stars" />
    <ImageView
        android:id="@+id/iv_commodity_score"
        android:layout_width="wrap_content"
        android:layout_below="@id/iv_service_attitude"
        android:layout_height="@dimen/comment_20_dip"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/tv_service_attitude"
        android:src="@drawable/ic_sortrecyke_stars" />
    <ImageView
        android:id="@+id/iv_store_environment"
        android:layout_width="wrap_content"
        android:layout_below="@id/iv_commodity_score"
        android:layout_height="@dimen/comment_20_dip"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/tv_service_attitude"
        android:src="@drawable/ic_sortrecyke_stars" />
    <TextView
        android:id="@+id/tv_score_attitude"
        android:layout_marginTop="@dimen/comment_27_dip"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:text="4.8"
        android:textColor="@color/gray_E7370C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_service_attitude"
        />
    <TextView
        android:id="@+id/tv_score_score"
        android:layout_below="@id/tv_score_attitude"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:text="4.8"
        android:textColor="@color/gray_E7370C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_service_attitude"
        />
    <TextView
        android:id="@+id/tv_score_environment"
        android:layout_below="@id/tv_score_score"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:text="4.8"
        android:textColor="@color/gray_E7370C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_store_environment"
        />
        <LinearLayout
            android:layout_marginTop="@dimen/comment_22_dip"
            android:layout_below="@id/tv_score_environment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/button_shape"
                android:layout_weight="1"
                android:layout_width="@dimen/comment_0_dip"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="全部(102)"
                android:layout_marginStart="@dimen/comment_35_dip"
                android:layout_height="@dimen/comment_36_dip" />
            <TextView
                android:background="@drawable/text_biankuang_shape"
                android:layout_weight="1"
                android:layout_width="@dimen/comment_0_dip"
                android:gravity="center"
                android:layout_marginStart="@dimen/comment_35_dip"
                android:text="满意(92)"
                android:textColor="@color/gray_E7370C"
                android:layout_height="@dimen/comment_36_dip"/>
            <TextView
                android:background="@drawable/text_biankuang_shape"
                android:layout_weight="1"
                android:layout_width="@dimen/comment_0_dip"
                android:text="不满意(10)"
                android:textColor="@color/gray_E7370C"
                android:layout_marginStart="@dimen/comment_35_dip"
                android:layout_marginEnd="@dimen/comment_35_dip"
                android:gravity="center"
                android:layout_marginBottom="@dimen/comment_350_dip"
                android:layout_height="@dimen/comment_36_dip"/>

        </LinearLayout>
</RelativeLayout>