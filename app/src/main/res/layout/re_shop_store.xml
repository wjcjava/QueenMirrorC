<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/comment_10_dip"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/comment_143_dip"
        android:layout_height="@dimen/comment_188_dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_shap">

        <ImageView

            android:id="@+id/iv_shop"
            android:layout_width="@dimen/comment_110_dip"
            android:layout_height="@dimen/comment_110_dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/comment_24_dip"
            app:srcCompat="@drawable/ic_sortrecyle_logo" />

        <TextView
            android:id="@+id/tv_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_shop"

            android:layout_marginStart="@dimen/comment_20_dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="八星八钻"
            android:textColor="@color/alpha_95_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shopName"
            android:layout_marginBottom="@dimen/comment_5_dip"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            android:text="钻石"
            android:textSize="@dimen/comment_12_size" />
    </RelativeLayout>
</RelativeLayout>