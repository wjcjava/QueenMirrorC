<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/comment_258_dip"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_brack_shape"
            android:layout_marginTop="@dimen/comment_8_dip"
            android:layout_marginBottom="@dimen/comment_10_dip"
            android:layout_width="@dimen/comment_258_dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_setpay"
                android:layout_marginTop="@dimen/comment_35_dip"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="@dimen/comment_15_size"
                android:layout_height="wrap_content"
                android:text="您还没有设置支付密码"
                />
            <TextView
                android:id="@+id/tv_setting_pay"
                android:layout_below="@id/tv_setpay"
                android:layout_marginTop="@dimen/comment_21_dip"
                android:layout_marginBottom="@dimen/comment_26_dip"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/comment_15_size"
                android:layout_width="@dimen/comment_202_dip"
                android:layout_height="@dimen/comment_34_dip"
                android:text="设置支付密码"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/icon_login_squareness"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_dialog_finsh"
            android:layout_width="@dimen/comment_22_dip"
            android:layout_height="@dimen/comment_22_dip"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/icon_dialog_dismess" />
    </RelativeLayout>

</LinearLayout>