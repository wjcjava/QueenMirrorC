<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/comment_65_dip">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_25_dip"
        android:paddingRight="@dimen/comment_10_dip"
        android:src="@mipmap/icon_back" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/comment_140_dip"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_title"

        android:layout_marginTop="@dimen/comment_2_dip"
        android:layout_width="@dimen/comment_21_dip"
        android:layout_height="@dimen/comment_21_dip"
        android:backgroundTintMode="@color/white"
        android:src="@drawable/icon_portrait"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/comment_2_dip" />

    <TextView
        android:id="@+id/title_title"
        android:layout_marginStart="@dimen/comment_6_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_title"
        android:text="写评论"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_18_size"
        />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_righttitle"

        android:layout_width="@dimen/comment_60_dip"
        android:layout_height="@dimen/comment_25_dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_marginEnd="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:src="@drawable/icon_master_addbuddy" />
    <TextView
        android:id="@+id/tv_righttitle"
        android:layout_width="@dimen/comment_60_dip"
        android:layout_height="@dimen/comment_25_dip"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_marginEnd="@dimen/comment_20_dip"
        android:text="发送"
        android:gravity="center"
        android:textSize="@dimen/comment_12_size"
        android:textColor="@color/gray_E7370C"
        android:background="@drawable/text_brack_shape"
        android:layout_marginRight="@dimen/comment_10_dip"
         />
</RelativeLayout>