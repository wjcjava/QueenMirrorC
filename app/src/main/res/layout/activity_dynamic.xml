<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ainisi.queenmirror.queenmirrorcduan.ui.master.activity.DynamicActivity">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_master_title"/>
    <RelativeLayout
        android:layout_below="@id/ic_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_tips"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:hint="@string/tips"
            android:gravity="top"
            android:paddingTop="@dimen/comment_13_dip"
            android:paddingStart="@dimen/comment_14_dip"
            android:textSize="@dimen/comment_15_size"
            android:layout_height="@dimen/comment_101_dip" />
        <RelativeLayout
            android:layout_below="@id/et_tips"
            android:background="@color/alpha_05_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_90_dip">

            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="@dimen/comment_89_dip"
                android:layout_height="@dimen/comment_90_dip"
                android:layout_marginStart="@dimen/comment_11_dip"
                android:src="@drawable/icon_home_beautiful" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/iv_shop"
                android:layout_marginTop="@dimen/comment_21_dip"
                android:layout_marginStart="@dimen/comment_19_dip"
                android:text="灰太狼的替身"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_15_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="@dimen/comment_231_dip"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:layout_toRightOf="@id/iv_shop"
                android:layout_below="@id/tv_name"
                android:layout_marginStart="@dimen/comment_19_dip"
                android:text="文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字"
                android:textSize="@dimen/comment_14_size"
                />
        </RelativeLayout>
    </RelativeLayout>
    
</RelativeLayout>
