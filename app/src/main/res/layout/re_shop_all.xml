<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_commodity_picture"
        android:layout_marginStart="@dimen/comment_11_dip"
        android:layout_width="@dimen/comment_105_dip"
        android:layout_height="@dimen/comment_105_dip"
        app:srcCompat="@drawable/icon_home_beautiful" />
    <TextView
        android:layout_below="@id/iv_commodity_picture"
        android:id="@+id/tv_commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginStart="@dimen/comment_12_dip"
        android:text="七彩猫眼甲"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_16_size" />
    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/comment_12_dip"
        android:text="25人好评"
        android:layout_below="@id/tv_commodity_name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_present_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_praise"
        android:layout_marginBottom="@dimen/comment_5_dip"
        android:layout_marginStart="@dimen/comment_12_dip"
        android:textColor="@color/gray_E7370C"
        android:textSize="@dimen/comment_18_size" />

    <ImageView
        android:id="@+id/original_price"
        android:layout_width="@dimen/comment_50_dip"
        android:layout_height="@dimen/comment_10_dip"
        android:layout_below="@id/tv_praise"
        android:layout_marginStart="@dimen/comment_3_dip"
        android:layout_marginTop="@dimen/comment_2_dip"
        android:layout_toRightOf="@id/tv_present_price"
        android:textColor="@color/alpha_05_black"

        app:srcCompat="@drawable/ic_sortrecyke_stars" />
</RelativeLayout>