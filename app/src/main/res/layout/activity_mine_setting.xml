<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ui.mine.activity.MineSettingActivity">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_below="@+id/ic_title"
        android:background="@color/alpha_05_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_phone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:textSize="@dimen/comment_14_size"
        android:text="请验证手机号137*****4578" />
    <RelativeLayout
        android:layout_marginTop="@dimen/comment_15_dip"
        android:background="@color/white"
        android:layout_below="@id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip"
        android:id="@+id/relativeLayout4">
    <TextView
        android:id="@+id/tv_actual"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:text="@string/verification_code"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_14_size" />
    <EditText
        android:id="@+id/et_actual"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:maxLength="6"
        android:background="@color/white"
        android:layout_toRightOf="@id/tv_actual"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/view"
        android:hint="@string/sms_authentication_code"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:textSize="@dimen/comment_14_size"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(57)重新获取"
        android:layout_centerVertical="true"
        android:textSize="@dimen/comment_14_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/comment_10_dip"
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginEnd="@dimen/comment_22_dip"
        android:layout_marginTop="@dimen/comment_30_dip"
        android:text="@string/no_verification_code"

        android:textColor="@color/common_title_background"
        android:textSize="@dimen/comment_12_size" />
    <Button
        android:layout_below="@+id/tv_verification"
        android:text="@string/verification"
        android:background="@drawable/ic_setting_breake"

        android:layout_marginTop="@dimen/comment_30_dip"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_40_dip" />
    </RelativeLayout>
</RelativeLayout>
