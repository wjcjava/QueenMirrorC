<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_brack_shape"
            android:layout_marginTop="@dimen/comment_8_dip"
            android:layout_marginBottom="@dimen/comment_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_pay_password_sub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_50_dip"
                android:background="@color/white"
                android:gravity="center"
                android:hint="@string/add_pay_password"
                android:inputType="numberPassword|number"
                android:textSize="@dimen/comment_14_size" />
            <TextView
                android:id="@+id/tv_setting_pay_sub"
                android:layout_below="@id/et_pay_password_sub"
                android:layout_marginTop="@dimen/comment_21_dip"
                android:layout_marginBottom="@dimen/comment_26_dip"
                android:textSize="@dimen/comment_15_size"
                android:layout_width="@dimen/comment_202_dip"
                android:layout_height="@dimen/comment_34_dip"
                android:text="去支付"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/icon_login_squareness"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_dialog_finsh"
            android:layout_width="@dimen/comment_22_dip"
            android:layout_height="@dimen/comment_22_dip"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/icon_dialog_dismess" />
    </RelativeLayout>

</LinearLayout>
