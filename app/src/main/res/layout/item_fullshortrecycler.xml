<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/et_shap"
    android:layout_marginBottom="@dimen/comment_0.5_dip"
    android:layout_height="@dimen/comment_97_dip"
    android:orientation="vertical">



        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_97_dip"
          >
            <ImageView
                android:layout_marginLeft="@dimen/comment_10_dip"
                android:layout_width="@dimen/comment_82_dip"
                android:layout_height="@dimen/comment_82_dip"
                android:src="@drawable/icon_home_beautiful"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/comment_70_dip"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sote_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comment_20_dip"
                    android:gravity="bottom"
                    android:text="Dear Skin 美容美发沙龙"
                    android:textColor="#000"
                    android:textSize="@dimen/comment_14_size" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comment_30_dip"
                    android:gravity="center|left">
                    <ImageView
                        android:id="@+id/sort_shart"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/comment_20_dip"
                        android:src="@drawable/ic_sortrecyke_stars" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/comment_12_size"
                        android:layout_marginLeft="@dimen/comment_5_dip"
                        android:text="4.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/comment_5_dip"
                        android:text="关注度 : 50"
                        android:textSize="@dimen/comment_12_size" />
                </LinearLayout>
                <TextView
                    android:id="@+id/sort_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comment_20_dip"
                    android:gravity="bottom"
                    android:text="营业时间：9:00~20:00"
                    android:textSize="@dimen/comment_12_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/sort_distance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_70_dip"
                android:layout_marginRight="@dimen/comment_10_dip"
                android:gravity="right|bottom"
                android:text="1.8km"
                android:textSize="@dimen/comment_14_size" />
        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_2_dip"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:background="#4DC6C4C4" />
</LinearLayout>