<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_1_dip"
            android:layout_marginStart="@dimen/comment_63_dip"
            android:layout_marginEnd="@dimen/comment_10_dip"
            android:layout_gravity="center"
            android:background="@color/alpha_15_black"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/di_san_fang_login"
            android:textSize="@dimen/comment_14_size"
            android:gravity="center"
            android:textColor="@color/color_hint_third_part_text"
            />
        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_1_dip"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginEnd="@dimen/comment_63_dip"
            android:layout_gravity="center"
            android:background="@color/alpha_15_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/user_reg_qq_login_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/icon_login_qq"/>
        <ImageView
            android:id="@+id/user_reg_wechat_login_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/icon_login_wechat"/>

    </LinearLayout>
</LinearLayout>