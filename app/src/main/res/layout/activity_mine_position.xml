<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.mine.activity.MinePositionActivity">

    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ic_title">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_2_dip"
                android:background="@color/alpha_05_black"
                />

            <TextView
                android:id="@+id/tv_mine_address"
                android:layout_below="@id/view"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/comment_13_dip"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_95_black"
                android:layout_marginLeft="@dimen/comment_6_dip"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/comment_16_dip"
                android:text="@string/new_receiving_address"
                android:textSize="@dimen/comment_15_size" />
            <ImageView
                android:layout_below="@id/view"
                android:layout_marginTop="@dimen/comment_17_dip"
                android:layout_width="@dimen/comment_15_dip"
                android:layout_height="@dimen/comment_15_dip"
                android:layout_toLeftOf="@id/tv_mine_address"
                android:src="@drawable/inco_workroom_add"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_above="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_2_dip"
                android:background="@color/alpha_05_black"

                />
            <ListView
                android:layout_below="@id/view1"
                android:id="@+id/lv_mine_position"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
