<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ui.mine.activity.MineRechargeActivity">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:id="@+id/rc_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_110_dip"
        android:layout_below="@id/ic_title"
        android:layout_margin="@dimen/comment_10_dip"
        android:background="@drawable/et_shap">
        <TextView
            android:id="@+id/tv_money"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:layout_width="match_parent"
            android:text="@string/recharge_amount_one"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/comment_16_size"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_marginTop="@dimen/comment_20_dip"
            android:layout_below="@id/tv_money"
            android:gravity="center"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:textColor="@color/alpha_95_black"
            android:text="@string/RMB"
            android:textSize="@dimen/comment_30_size"
            />
        <EditText
            android:layout_below="@id/tv_money"
            android:layout_toRightOf="@id/tv_rmb"
            android:layout_marginTop="@dimen/comment_20_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_50_dip"
            android:inputType="number"
            android:layout_marginRight="@dimen/comment_10_dip"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_25_size" />
    </RelativeLayout>


    <Button
        android:id="@+id/bt_binding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_40_dip"
        android:layout_below="@id/rc_layout"
        android:layout_margin="@dimen/comment_15_dip"
        android:background="@drawable/ic_setting_breake"
        android:text="@string/binding_recharge"
        android:textColor="@color/white" />
</RelativeLayout>
