<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/comment_15_dip"
        android:layout_marginTop="@dimen/comment_18_dip"
        android:text="@string/business_features"
        android:textColor="@color/alpha_50_black"
        android:textSize="@dimen/comment_14_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_home_merchants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_6_dip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/comment_15_dip"
        android:layout_marginTop="@dimen/comment_18_dip"
        android:text="@string/preferential_activities"
        android:textColor="@color/alpha_50_black"
        android:textSize="@dimen/comment_14_size" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_home_preferential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="@dimen/comment_40_dip"
            android:layout_weight="1"
            android:background="@color/alpha_15_black"
            android:gravity="center"
            android:text="取消筛选" />

        <TextView
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="@dimen/comment_40_dip"
            android:layout_weight="1"
            android:background="@drawable/ic_setting_breake"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>