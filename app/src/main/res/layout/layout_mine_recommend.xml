<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_gift"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/icon_mine_gift" />

            <TextView
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:text="@string/gift" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_beauty"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/icon_mine_beauty" />

            <TextView
                android:textColor="@color/alpha_95_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:textSize="@dimen/comment_12_size"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:text="@string/beauty" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/li_mine_main_authentication"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_mine_crown" />

            <TextView
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/mine_crown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_service"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:src="@drawable/icon_service"
                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:textColor="@color/alpha_95_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/customer_service_center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_problem"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_mine_problem" />

            <TextView
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/help_and_feedback" />

        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>


</LinearLayout>