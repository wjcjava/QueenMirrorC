<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/comment_10_dip"
    android:layout_marginStart="@dimen/comment_17_dip"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_commodity_picture"
        android:layout_width="@dimen/comment_100_dip"
        android:layout_height="@dimen/comment_100_dip"
        android:src="@drawable/icon_home_beautiful" />
    <TextView
        android:layout_below="@id/iv_commodity_picture"
        android:id="@+id/tv_commodity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_12_size" />
    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/alpha_55_black"
        android:textSize="@dimen/comment_12_size"
        android:layout_below="@id/tv_commodity_name"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_present_price"
        android:layout_below="@id/tv_praise"
        android:textSize="@dimen/comment_14_size"
        android:textColor="@color/gray_E7370C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/comment_5_dip"
        />
</LinearLayout>