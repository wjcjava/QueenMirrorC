<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_commodity_picture"
        android:layout_marginStart="@dimen/comment_11_dip"
        android:layout_width="@dimen/comment_95_dip"
        android:layout_height="@dimen/comment_95_dip"
        android:src="@drawable/icon_home_beautiful" />
    <TextView
        android:layout_below="@id/iv_commodity_picture"
        android:id="@+id/tv_commodity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginStart="@dimen/comment_12_dip"

        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_12_size" />
    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/comment_10_dip"

        android:textSize="@dimen/comment_10_size"
        android:layout_below="@id/tv_commodity_name"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_present_price"
        android:layout_below="@id/tv_praise"
        android:textSize="@dimen/comment_14_size"

        android:textColor="@color/gray_E7370C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/comment_5_dip"
        android:layout_marginStart="@dimen/comment_12_dip"
        />
    <TextView
        android:id="@+id/original_price"
        android:layout_below="@id/tv_praise"
        android:layout_toRightOf="@id/tv_present_price"
        android:layout_width="wrap_content"
        android:textColor="@color/alpha_15_black"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:layout_marginTop="@dimen/comment_2_dip"
        android:layout_height="wrap_content"
        android:textSize="@dimen/comment_12_size"
        android:text="Â¥258"
        />
</RelativeLayout>