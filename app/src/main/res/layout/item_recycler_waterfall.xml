<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/comment_171_dip"
    android:layout_height="wrap_content"
    android:background="@color/tranparent"
    android:fitsSystemWindows="true"
    android:paddingEnd="@dimen/comment_5_dip"
    android:paddingStart="@dimen/comment_5_dip"
    android:paddingTop="@dimen/comment_10_dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_shap">

        <ImageView
            android:id="@+id/iv_homepage_shop"
            android:layout_width="@dimen/comment_149_dip"
            android:layout_height="@dimen/comment_149_dip"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginEnd="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_10_dip"
            app:srcCompat="@drawable/ic_sortrecyle_logo" />

        <TextView

            android:id="@+id/tv_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_homepage_shop"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:text="MOCO美容美发沙龙"
            android:textColor="@color/alpha_95_black" />

        <ImageView
            android:id="@+id/iv_queen"
            android:layout_width="@dimen/comment_44_dip"
            android:layout_height="@dimen/comment_18_dip"
            android:layout_below="@id/tv_shopName"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            app:srcCompat="@drawable/icon_item_rueen" />

        <ImageView
            android:id="@+id/iv_xingxing"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_10_dip"
            android:layout_below="@id/iv_queen"

            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            app:srcCompat="@drawable/ic_sortrecyke_stars" />

        <TextView
            android:id="@+id/tv_shop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_xingxing"
            android:layout_marginBottom="@dimen/comment_5_dip"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            android:singleLine="true"
            android:text="营业时间：9:00~20:00"

            android:textColor="@color/alpha_55_black"
            android:textSize="@dimen/comment_12_size" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_2_dip"
            android:layout_below="@id/tv_shop_time"
            android:layout_marginEnd="@dimen/comment_11_dip"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:background="@color/alpha_05_black" />

        <TextView
            android:id="@+id/tv_homepage_distance"
            android:layout_below="@id/view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:text="相距100km"
            android:layout_marginBottom="@dimen/comment_10_dip"
            android:textSize="@dimen/comment_12_size"
            android:textColor="@color/alpha_55_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>