<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_back_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:id="@+id/layout_message_interactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_title"
        android:background="@color/white"
        android:paddingBottom="@dimen/comment_10_dip">

        <ImageView
            android:id="@+id/iv_message_interactive"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/icon_home_xitong" />

        <TextView
            android:id="@+id/tv_message_interactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_message_interactive"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:layout_toEndOf="@+id/iv_message_interactive"
            android:text="系统消息"
            android:textColor="@color/alpha_90_black"
            android:textSize="@dimen/comment_14_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_message_interactive"
            android:layout_below="@id/tv_message_interactive"
            android:layout_marginTop="8dp"
            android:text="暂无消息"
            android:textColor="@color/message_text"
            android:textSize="@dimen/comment_12_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_1_dip"
        android:layout_below="@+id/layout_message_interactive"
        android:background="@color/alpha_05_black" />

    <RelativeLayout
        android:id="@+id/layout_message_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_one"
        android:background="@color/white"
        android:paddingBottom="@dimen/comment_10_dip">

        <ImageView
            android:id="@+id/iv_message_system"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/hudong" />

        <TextView
            android:id="@+id/tv_message_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_message_system"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:layout_toEndOf="@+id/iv_message_system"
            android:text="互动消息"
            android:textColor="@color/alpha_90_black"
            android:textSize="@dimen/comment_14_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_message_system"
            android:layout_below="@id/tv_message_system"
            android:layout_marginTop="8dp"
            android:text="暂无消息"
            android:textColor="@color/message_text"
            android:textSize="@dimen/comment_12_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_1_dip"
        android:layout_below="@+id/layout_message_system"
        android:background="@color/alpha_05_black" />

    <RelativeLayout
        android:id="@+id/layout_message_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_two"
        android:background="@color/white"
        android:paddingBottom="@dimen/comment_10_dip">

        <ImageView
            android:id="@+id/iv_commment"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/comment_18_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/comment" />

        <TextView
            android:id="@+id/tv_message_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_commment"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_4_dip"
            android:layout_toEndOf="@+id/iv_commment"
            android:text="活动消息"
            android:textColor="@color/alpha_90_black"
            android:textSize="@dimen/comment_14_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_message_review"
            android:layout_below="@id/tv_message_review"
            android:layout_marginTop="8dp"
            android:text="暂无消息"
            android:textColor="@color/message_text"
            android:textSize="@dimen/comment_12_size" />
    </RelativeLayout>

</RelativeLayout>