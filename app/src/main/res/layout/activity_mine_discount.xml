<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.mine.activity.MineDiscountActivity">

    <RelativeLayout
        android:id="@+id/ic_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_48_dip">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:src="@mipmap/icon_back" />

        <RadioGroup

            android:layout_width="@dimen/comment_216_dip"
            android:layout_height="@dimen/comment_27_dip"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_mine_preferential_background"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/radio_preferential"
                android:layout_width="@dimen/comment_108_dip"
                android:layout_height="@dimen/comment_27_dip"
                android:background="@drawable/radiobutton_background_checked"
                android:button="@null"
                android:gravity="center"
                android:text="@string/Coupon"
                android:textColor="@color/radiobutton_textcolor" />

            <RadioButton
                android:id="@+id/radio_invincible"
                android:layout_width="@dimen/comment_108_dip"
                android:layout_height="@dimen/comment_27_dip"
                android:background="@drawable/radiobutton_backgroundtwo_checked"
                android:button="@null"
                android:gravity="center"
                android:text="@string/invincible_coupon"
                android:textColor="@color/radiobutton_textcolor" />
        </RadioGroup>

    </RelativeLayout>

  <FrameLayout
      android:id="@+id/fr_mine_discount"
      android:layout_below="@id/ic_title"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
</RelativeLayout>
