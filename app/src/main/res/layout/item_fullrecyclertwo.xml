<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginStart="@dimen/comment_15_dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/iv_title"
            android:layout_width="@dimen/comment_40_dip"
            android:layout_height="@dimen/comment_40_dip"
            android:src="@drawable/icon_portrait"
            app:civ_border_color="@color/alpha_95_black"
            app:civ_border_width="@dimen/comment_2_dip" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/comment_5_dip"

            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_title"
            android:text="啧啧啧" />

        <ImageView
            android:id="@+id/tv_shop"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:layout_height="@dimen/comment_10_dip"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@+id/iv_title"
            android:src="@drawable/ic_sortrecyke_stars" />

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/comment_60_dip"
            android:text="01-17" />

        <TextView
            android:layout_marginTop="@dimen/comment_10_dip"
            android:id="@+id/tv_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_title"
            android:text="离公司近，方便，经济，实惠，服务态度很好" />

        <ImageView
            android:layout_marginTop="@dimen/comment_10_dip"
            android:id="@+id/tv_img"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_evaluate"
            app:srcCompat="@drawable/icon_home_beautiful" />

        <TextView

            android:layout_marginTop="@dimen/comment_10_dip"
            android:id="@+id/tv_consum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_img"
            android:textColor="@color/alpha_15_black"
            android:text="消费评价 - Dear Skin形象工作室" />
        <View
            android:id="@+id/view_two"
            android:layout_below="@id/tv_consum"
            android:layout_marginEnd="@dimen/comment_15_dip"
            android:layout_marginTop="@dimen/comment_18_dip"
            android:layout_marginBottom="@dimen/comment_18_dip"
            android:background="@color/alpha_05_black"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </RelativeLayout>
</LinearLayout>