<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/comment_20_dip">

    <RelativeLayout
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="@dimen/comment_20_dip"
        android:layout_margin="@dimen/comment_10_dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="@dimen/comment_20_dip"
            android:layout_height="@dimen/comment_20_dip"
            android:src="@drawable/icon_pop_discount" />

        <CheckBox
            android:id="@+id/tv_preferential_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_20_dip"
            android:layout_marginStart="@dimen/comment_5_dip"
            android:layout_toRightOf="@id/iv_shop"
            android:button="@null"
            android:text="@string/preferential_merchants"
            android:textColor="@color/radio_end_textcolor"
            android:textSize="@dimen/comment_14_size" />
    </RelativeLayout>
</LinearLayout>