<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/comment_5_dip"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/comment_13_dip"
            android:layout_marginRight="@dimen/comment_5_dip"
            android:src="@drawable/icon_home_position"
            android:layout_height="@dimen/comment_30_dip" />
        <TextView
            android:layout_width="wrap_content"
            android:text="苏州"
            android:gravity="center"
            android:textSize="@dimen/comment_15_dip"
            android:layout_height="@dimen/comment_30_dip" />
        <ImageView
            android:layout_width="@dimen/comment_13_dip"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:src="@drawable/arrow_dwon_blue"
            android:layout_height="@dimen/comment_30_dip" />
        <LinearLayout
            android:id="@+id/ll_input_area"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:layout_width="@dimen/comment_270_dip"
            android:layout_height="wrap_content"
            android:background="#FFBCB7B7"
            android:gravity="center"
            android:layout_marginRight="@dimen/comment_10_dip"
            android:layout_toLeftOf="@+id/tv_start_search"
            android:layout_toRightOf="@id/iv_back"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/icon_home_search"
                android:layout_width="@dimen/comment_20_dip"
                android:layout_marginLeft="@dimen/comment_5_dip"
                android:layout_height="wrap_content" />

            <EditText
                android:background="@null"
                android:id="@+id/et_input_search_words"
                android:layout_width="@dimen/comment_200_dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comment_5_dip"
                android:padding="@dimen/comment_8_dip"
                android:singleLine="true"
                android:textSize="@dimen/comment_12_size"
                android:hint="请输入店铺" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/comment_20_dip"
        android:background="#fff"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/comment_15_dip"
            android:src="@drawable/icon_home_location"

            android:layout_height="@dimen/comment_15_dip" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/comment_14_size"
            android:text="点击定位"
            android:layout_height="@dimen/comment_40_dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/comment_13_dip"
            android:layout_marginRight="@dimen/comment_5_dip"
            android:src="@drawable/icon_home_address"
            android:layout_height="@dimen/comment_30_dip" />
        <TextView
            android:layout_width="wrap_content"
            android:text="附近地址"
            android:gravity="center"
            android:textSize="@dimen/comment_14_size"
            android:layout_height="@dimen/comment_30_dip" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_selsctcity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>