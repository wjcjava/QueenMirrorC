<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ainisi.queenmirror.queenmirrorcduan.ui.mine.activity.ModifyPayActivity">

    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip">

        <TextView
            android:id="@+id/tv_system_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:gravity="center"
            android:text="登录账号"
            android:textSize="@dimen/comment_14_size" />

        <EditText
            android:id="@+id/et_system_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_toRightOf="@id/tv_system_phone"
            android:background="@color/white"
            android:hint="@string/add_login_number"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/comment_14_size" />
    </RelativeLayout>

    <View
        android:id="@+id/v1_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/et_system_phone"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@color/alpha_20_black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip">

        <TextView
            android:id="@+id/tv_system_loginpass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:gravity="center"
            android:text="登录密码"
            android:textSize="@dimen/comment_14_size" />

        <EditText
            android:id="@+id/et_system_loginpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:maxLength="16"
            android:layout_toRightOf="@id/tv_system_loginpass"
            android:background="@color/white"
            android:hint="@string/add_login_password"
            android:inputType="textPassword"
            android:textSize="@dimen/comment_14_size" />
    </RelativeLayout>

    <View
        android:id="@+id/v2_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_system_loginpass"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@color/alpha_20_black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip">

        <TextView
            android:id="@+id/tv_system_verification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_marginStart="@dimen/comment_20_dip"
            android:gravity="center"
            android:text="@string/verification_code"
            android:textSize="@dimen/comment_14_size" />

        <EditText
            android:id="@+id/et_system_verification"
            android:layout_width="@dimen/comment_100_dip"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/comment_25_dip"
            android:layout_toRightOf="@id/tv_system_verification"
            android:background="@color/white"
            android:hint="@string/verification_code"
            android:inputType="number"
            android:textSize="@dimen/comment_14_size" />

        <View
            android:id="@+id/view0"
            android:layout_width="@dimen/comment_2_dip"
            android:layout_height="@dimen/comment_28_dip"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_toRightOf="@id/et_system_verification"
            android:background="@color/gray_E7370C" />

        <TextView
            android:id="@+id/tv_validation"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view0"
            android:gravity="center"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/gray_E7370C"
            android:textSize="@dimen/comment_15_size" />
    </RelativeLayout>


    <View
        android:id="@+id/v3_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_system_verification"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@color/alpha_20_black" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/re_graphics_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:id="@+id/re_validation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_50_dip"
            android:layout_marginTop="@dimen/comment_5_dip">

            <EditText
                android:id="@+id/et_graphics_validation"
                android:layout_width="@dimen/comment_150_dip"
                android:layout_height="@dimen/comment_24_dip"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/comment_20_dip"
                android:layout_marginStart="@dimen/comment_50_dip"
                android:layout_toRightOf="@id/iv_graphics_pass"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="请输入图形验证码"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/comment_14_size" />


            <ImageView
                android:id="@+id/iv_graphics_validation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_24_dip"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/comment_20_dip"
                android:layout_toRightOf="@id/et_graphics_validation" />
        </RelativeLayout>

        <View
            android:layout_below="@+id/re_validation"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/comment_20_dip"
            android:layout_marginRight="@dimen/comment_20_dip"
            android:background="@color/alpha_20_black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip">

        <TextView
            android:id="@+id/tv_system_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginStart="@dimen/comment_20_dip"
            android:gravity="center"
            android:text="@string/paypass"
            android:textSize="@dimen/comment_14_size" />

        <EditText
            android:id="@+id/et_pay_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_toRightOf="@id/tv_system_password"
            android:background="@color/white"
            android:hint="@string/add_pay_password"
            android:maxLength="16"
            android:inputType="numberPassword|number"
            android:textSize="@dimen/comment_14_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pay_password"
        android:layout_marginStart="@dimen/comment_20_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="该密码用于银行卡，女王卡。钱包支付"
        android:textColor="@color/alpha_30_black"

        />

    <TextView

        android:id="@+id/tv_ok_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_45_dip"
        android:layout_below="@+id/text"
        android:layout_marginLeft="@dimen/comment_30_dip"
        android:layout_marginRight="@dimen/comment_30_dip"
        android:layout_marginTop="@dimen/comment_20_dip"
        android:background="@drawable/ic_setting_breake"
        android:gravity="center"
        android:text="@string/determine"
        android:textColor="@color/white" />
</LinearLayout>
