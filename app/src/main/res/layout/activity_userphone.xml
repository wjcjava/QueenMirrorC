<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ui.mine.activity.UserphoneActivity">
    <include
        android:id="@+id/ic_title"
        layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_below="@id/ic_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_vector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_75_dip"
        app:srcCompat="@drawable/icon_user_vector"
        android:layout_below="@+id/ic_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_vector"
        android:gravity="center"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_14_size"
        android:layout_marginLeft="@dimen/comment_75_dip"
        android:layout_marginRight="@dimen/comment_75_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="@string/secure_environment" />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_40_dip"
        android:layout_marginTop="@dimen/comment_20_dip"
        android:layout_below="@+id/tv_text"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:background="@color/yellow"
        android:text="@string/change_immediately" />
</RelativeLayout>
