<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/tranparent"
    android:paddingEnd="@dimen/comment_2_dip"
    android:paddingStart="@dimen/comment_2_dip"
    android:paddingTop="@dimen/comment_5_dip"
    android:paddingBottom="@dimen/comment_5_dip"
    android:fitsSystemWindows="true"

    >

    <LinearLayout
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/comment_5_dip"
        android:background="@drawable/et_shap"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_commodity_picture"
            android:layout_width="@dimen/comment_90_dip"
            android:layout_height="@dimen/comment_90_dip"
            android:layout_marginEnd="@dimen/comment_12_dip"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_10_dip"
            app:srcCompat="@drawable/ic_sortrecyle_logo" />

        <TextView
            android:id="@+id/tv_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="MOCO美容"
            android:textColor="@color/alpha_95_black" />

        <TextView
            android:id="@+id/tv_praise"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/alpha_55_black"
            android:textSize="@dimen/comment_12_size" />

        <ImageView
            android:id="@+id/iv_xingxing"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_10_dip"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            app:srcCompat="@drawable/ic_sortrecyke_stars" />

    </LinearLayout>
</LinearLayout>