<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:popupbtn="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_stick_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_45_dip"
        android:layout_gravity="center_horizontal"
        android:background="@color/home_shop_middle"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/comment_10_dip"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/comment_70_dip"
            android:layout_height="@dimen/comment_30_dip"
            android:src="@drawable/icon_home_recommend" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_30_dip"
            android:layout_marginStart="@dimen/comment_8_dip"
            android:gravity="center|left"
            android:text="@string/satisfy"
            android:textColor="@color/home_queen_full" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_home_paixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/li_hime_sort"
            style="@style/Recommend_layout"
            android:layout_height="@dimen/comment_40_dip">
            <com.ainisi.queenmirror.queenmirrorcduan.popbutton.PopupButton
                android:id="@+id/bt_app_home"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/comment_40_dip"
                android:text="综合选择"
                android:textSize="12sp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/alpha_55_black"
                popupbtn:normalBg="@drawable/tab_bkg_line"
                popupbtn:normalIcon="@drawable/arrow_dwon_blue"
                popupbtn:pressBg="@drawable/tab_bkg_selected"
                popupbtn:pressIcon="@drawable/arrow_up_black"
                />

                />
            <!--<TextView-->
                <!--android:id="@+id/rb_sort"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="附近商家"-->
                <!--android:textColor="@color/alpha_55_black"-->
                <!--android:textSize="@dimen/comment_12_size" />-->

            <!--<ImageView-->
                <!--android:id="@+id/iv_shop_sort"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:background="@drawable/arrow_dwon_blue" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/rb_sales"
            style="@style/Recommend_layout"
            android:layout_height="@dimen/comment_40_dip"
            android:text="@string/sales"
            android:textColor="@color/alpha_55_black"
            android:textSize="@dimen/comment_12_size" />

        <TextView

            android:id="@+id/rb_distance"
            style="@style/Recommend_layout"
            android:layout_height="@dimen/comment_40_dip"
            android:text="@string/distance"
            android:textColor="@color/alpha_55_black"
            android:drawableEnd="@drawable/arrow_dwon_blue"
            android:textSize="@dimen/comment_12_size" />

        <LinearLayout
            android:id="@+id/li_home_screen_bottom"
            style="@style/Recommend_layout"
            android:layout_height="@dimen/comment_40_dip">

            <TextView
                android:id="@+id/rb_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen"
                android:layout_marginEnd="@dimen/comment_5_dip"
                android:textColor="@color/alpha_55_black"
                android:textSize="@dimen/comment_12_size" />

            <RadioButton

                android:id="@+id/bt_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_55_black"
                android:layout_marginTop="@dimen/comment_1_dip"
                android:button="@null"
                android:drawableLeft="@drawable/icon_home_screen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_surface"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="@dimen/comment_40_dip"
            android:paddingEnd="@dimen/comment_10_dip"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView

                android:id="@+id/iv_surface"
                android:layout_width="@dimen/comment_15_dip"
                android:layout_height="@dimen/comment_12_dip"
                app:srcCompat="@drawable/icon_home_recycler" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>