<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_portrait"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/comment_2_dip"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:layout_alignBottom="@+id/tv_phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/comment_21_dip" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/comment_14_size"
        android:textColor="#000"
        android:layout_marginTop="@dimen/comment_20_dip"
        android:layout_toEndOf="@+id/iv_title"
        android:text="推荐好友奖励" />
    <TextView
        android:id="@+id/tv_whole"
        android:layout_below="@+id/textView2"
        android:layout_width="match_parent"
        android:text="【酬劳】"
        android:textSize="@dimen/comment_12_size"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:layout_toEndOf="@+id/iv_title"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/iv_title"
        android:layout_below="@+id/tv_whole"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/comment_10_size"
        android:layout_height="wrap_content"
        android:text="今天  09:32"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_whole"
        android:layout_alignParentEnd="true"
        android:textColor="#FF6633"
        android:layout_marginEnd="@dimen/comment_12_dip"
        android:text="+50" />
    <View
        android:layout_below="@id/text"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:layout_marginBottom="@dimen/comment_5_dip"
        android:layout_width="match_parent"
        android:background="@color/alpha_05_black"
        android:layout_height="@dimen/comment_1_dip"/>
</RelativeLayout>