<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/et_shap"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="@color/alpha_05_black"
        android:layout_height="@dimen/comment_10_dip"/>
    <RelativeLayout
        android:layout_below="@id/view"
        android:id="@+id/recycler"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/store_checkBox"
            android:visibility="visible"
            android:layout_marginStart="@dimen/comment_15_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/purchase_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_marginStart="@dimen/comment_8_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/store_checkBox"
            android:layout_marginTop="@dimen/comment_15_dip"
            app:srcCompat="@drawable/inco_shop" />
        <TextView
            android:textColor="@color/black"
            android:drawablePadding="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_14_size"
            android:text="MOCO形象工作室>"
            android:layout_marginTop="@dimen/comment_15_dip"
            android:layout_toRightOf="@id/iv_shop"
            android:id="@+id/store_name"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_below="@id/recycler"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/comment_15_dip"
        android:layout_marginEnd="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_8_dip"
        android:layout_marginBottom="@dimen/comment_8_dip"
        android:background="@color/alpha_05_black"
        android:layout_height="@dimen/comment_2_dip"/>
</RelativeLayout>