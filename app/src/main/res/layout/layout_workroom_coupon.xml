<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/re_workroom_coupon"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_shop"
        android:layout_below="@id/listView"
        
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/comment_21_dip"
        android:text="店铺通用卷"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_16_size"
        android:layout_height="wrap_content" />
    <com.ainisi.queenmirror.queenmirrorcduan.utils.NoScrollListview
        android:id="@+id/list_shop"
        android:layout_below="@id/tv_shop"
        android:scrollbars="none"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_single"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="单品抵扣卷"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_16_size"
        android:layout_marginStart="@dimen/comment_21_dip"
        android:layout_below="@id/list_shop"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ainisi.queenmirror.queenmirrorcduan.utils.NoScrollListview
        android:layout_marginTop="@dimen/comment_10_dip"
        android:id="@+id/list_single"
        android:scrollbars="none"
       
        android:layout_below="@id/tv_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>