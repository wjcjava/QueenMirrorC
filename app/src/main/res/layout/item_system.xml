<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/comment_5_dip"
    android:layout_marginRight="@dimen/comment_5_dip"
    android:layout_marginTop="@dimen/comment_5_dip"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/comment_17_dip"
        android:layout_marginTop="@dimen/comment_14_dip"
        android:text="女王卡积分变更通知"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_15_size" />

    <TextView
        android:id="@+id/tv_single"
        android:layout_width="@dimen/comment_255_dip"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_order"
        android:layout_below="@+id/tv_order"
        android:layout_marginTop="@dimen/comment_12_dip"
        android:text="亲，您在2018-8-15 13:25充值2000元获得200积分已到账了！"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_13_size" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_single"
        android:layout_below="@+id/tv_single"
        android:layout_marginBottom="@dimen/comment_14_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:text="来自女王魔镜"
        android:textColor="@color/alpha_60_black"
        android:textSize="@dimen/comment_9_size" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_single"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/comment_13_dip"
        android:text="18/01/26"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_12_size" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/comment_48_dip"
        android:layout_height="@dimen/comment_48_dip"
        android:layout_alignBottom="@+id/tv_number"
        android:layout_alignEnd="@+id/tv_date"
        android:layout_alignStart="@+id/tv_date"
        android:layout_alignTop="@+id/tv_single"
        app:srcCompat="@mipmap/icon_login_head" />
</RelativeLayout>