<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.mine.activity.UserpassActivity">
    <include
        android:id="@+id/pass"
        layout="@layout/layout_title"/>
    <EditText
        android:id="@+id/ed_phone"
        android:inputType="number"
        android:maxLength="11"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:layout_below="@id/pass"
        android:background="@color/white"
        android:hint="@string/add_phone_number"
        android:gravity="center|left"
        android:textSize="@dimen/comment_14_size"
        android:paddingLeft="@dimen/comment_10_dip"
        android:layout_width="@dimen/comment_250_dip"
        android:layout_height="@dimen/comment_50_dip"/>
    <View
        android:id="@+id/view_one"
        android:layout_width="@dimen/comment_2_dip"
        android:layout_below="@id/pass"
        android:layout_height="@dimen/comment_40_dip"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:layout_toRightOf="@id/ed_phone"
        android:background="@drawable/ic_setting_breake"
        />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@id/view_one"
        android:layout_below="@id/pass"
        android:text="获取验证码"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:gravity="center"
        android:textSize="@dimen/comment_14_size"
        android:layout_height="@dimen/comment_50_dip"/>
    <View
        android:id="@+id/v1_pass"
        android:layout_below="@id/ed_phone"
        android:background="@color/alpha_20_black"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/ev_verification"
        android:layout_below="@+id/v1_pass"
        android:background="@color/white"
        android:hint="@string/add_verification"
        android:inputType="number"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:textSize="@dimen/comment_14_size"
        android:paddingLeft="@dimen/comment_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_50_dip" />

    <View
        android:id="@+id/v2_pass"
        android:layout_below="@id/ev_verification"
        android:background="@color/alpha_20_black"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/ed_pass"
        android:layout_below="@+id/v2_pass"
        android:background="@color/white"
        android:hint="@string/add_password"
        android:paddingLeft="@dimen/comment_10_dip"
        android:inputType="numberPassword|number"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:textSize="@dimen/comment_14_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_50_dip" />
    <View
        android:id="@+id/view"
        android:layout_below="@id/ed_pass"
        android:background="@color/alpha_20_black"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_45_dip"
        android:layout_marginTop="@dimen/comment_20_dip"
        android:layout_marginLeft="@dimen/comment_30_dip"
        android:layout_marginRight="@dimen/comment_30_dip"
        android:background="@drawable/ic_setting_breake"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/view"
        android:text="@string/determine" />

</RelativeLayout>
