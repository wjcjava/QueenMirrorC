<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
   

    <CheckBox
        android:id="@+id/box_goods"
        android:layout_width="@dimen/comment_16_dip"
        android:layout_height="@dimen/comment_16_dip"
     
        android:layout_marginStart="@dimen/comment_20_dip"
        android:layout_marginTop="@dimen/comment_25_dip"
        android:background="@drawable/purchase_checkbox"
        android:button="@null" />

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="@dimen/comment_40_dip"
        android:layout_height="@dimen/comment_40_dip"
       
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/box_goods"
        android:src="@drawable/icon_home_beautiful" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_marginStart="@dimen/comment_5_dip"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_toRightOf="@id/iv_shop"
        android:text="单人美甲套餐"
        android:textSize="@dimen/comment_14_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shop_name"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:layout_toRightOf="@id/iv_shop"
        android:text="X1"
        android:textSize="@dimen/comment_12_size" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shop_name"
        android:layout_marginStart="@dimen/comment_5_dip"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/comment_20_dip"
        android:text="¥68"
        android:textSize="@dimen/comment_11_size" />
    <View
        android:layout_below="@id/iv_shop"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_height="@dimen/comment_2_dip"
        android:background="@color/alpha_05_black"
        />
</RelativeLayout>