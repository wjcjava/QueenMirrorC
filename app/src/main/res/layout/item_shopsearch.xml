<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/et_shap"
    android:paddingTop="@dimen/comment_5_dip"
    android:layout_height="match_parent"
    android:orientation="vertical">
    >

    <LinearLayout
        android:id="@+id/li_home_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/comment_10_dip">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_10_dip">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_sortrecyle_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="bottom"
                    android:textColor="#000"
                    android:textSize="@dimen/comment_14_size" />

                <ImageView
                    android:id="@+id/iv_search_shopshart"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_sortrecyke_stars" />

                <ImageView
                    android:id="@+id/sort_groupshop"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_home_recommend" />

                <TextView
                    android:id="@+id/tv_search_shoptime"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="bottom"
                    android:textSize="@dimen/comment_10_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_search_shopdistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/comment_10_dip"
                android:gravity="right"
                android:text="距876m"
                android:textColor="#000"
                android:textSize="@dimen/comment_10_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/comment_10_dip"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:background="#4DC6C4C4" />
</LinearLayout>