<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/et_shap"
    android:layout_marginBottom="@dimen/comment_0.5_dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/recycler_1"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_40_dip">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/comment_19_dip"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/inco_shop" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/comment_12_dip"
        android:layout_toEndOf="@+id/imageView6"
        android:text="Dear Skin形象工作室>"
        android:layout_centerVertical="true"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_16_size" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/alpha_05_black"
        android:layout_width="match_parent"
        android:layout_below="@+id/recycler_1"
        android:layout_height="@dimen/comment_82_dip"
        android:id="@+id/relativeLayout2">
    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/comment_66_dip"
        android:layout_height="@dimen/comment_66_dip"
        android:layout_marginStart="17dp"
        android:layout_margin="@dimen/comment_5_dip"
        app:srcCompat="@drawable/icon_home_beautiful"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/comment_10_dip"
        android:layout_toEndOf="@+id/imageView11"
        android:text="单人纯色美甲"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_14_size"
         />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_12_dip"
        android:text="商品描述商品描述商品描述"
        android:textSize="@dimen/comment_12_size"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView6"
        android:layout_marginEnd="@dimen/comment_12_dip"
        android:text="X1"
        android:textSize="@dimen/comment_14_size" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginStart="@dimen/comment_19_dip"
        app:srcCompat="@drawable/inco_refund" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_marginLeft="@dimen/comment_5_dip"
        android:layout_below="@+id/relativeLayout2"
        android:layout_toEndOf="@+id/imageView12"
        android:textColor="@color/alpha_95_black"
        android:text="仅退款 退款成功" />
    <View
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_below="@id/textView28"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_1_dip"
        android:background="@color/alpha_30_black"
        android:id="@+id/view3" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="@dimen/comment_82_dip"
        android:gravity="center"
        android:layout_height="@dimen/comment_32_dip"
        android:background="@drawable/text_brack_shape"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view3"
        android:layout_marginEnd="@dimen/comment_10_dip"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:text="查看详情"
        android:textSize="@dimen/comment_14_size"
        android:layout_marginBottom="@dimen/comment_16_dip"
        android:textColor="@color/colorAccent" />

</RelativeLayout>