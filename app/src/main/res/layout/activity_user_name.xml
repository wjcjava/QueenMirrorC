<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"

    android:layout_height="match_parent"
    tools:context=".ui.mine.activity.UserNameActivity">
    <include
        android:id="@+id/tit_name"
        layout="@layout/layout_title"/>
    <LinearLayout
        android:background="@drawable/text_username_shape"
        android:layout_below="@id/tit_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/comment_10_dip"
        android:layout_height="@dimen/comment_40_dip"
        android:id="@+id/user_layout">

    <EditText
        android:layout_weight="5"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:background="@color/white"
        android:layout_width="@dimen/comment_0_dip"
        android:textSize="@dimen/comment_16_size"
        android:layout_height="wrap_content"
        android:text="用户名:dugujun001"
         />

    <ImageView
        android:layout_marginRight="@dimen/comment_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_username_delete" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_layout"
        android:layout_below="@+id/user_layout"
        android:layout_marginStart="@dimen/comment_15_dip"
        android:text="以英文字母或汉字开头，限制4-16个字符，一个汉字为两个字符"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_12_size" />
</RelativeLayout>
