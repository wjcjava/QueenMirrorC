<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ainisi.queenmirror.queenmirrorcduan.utils.customview.RefreshLoadMoreLayout
        android:id="@+id/rlm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rll_header_hint_normal="下拉给我试试看"
        app:rll_header_hint_ready="主淫我已经准备好了">
        <com.ainisi.queenmirror.queenmirrorcduan.utils.ScrollInterceptScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comment_19_dip"
                android:layout_marginTop="@dimen/comment_10_dip"
                android:text="商品通用券"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_15_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/re_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comment_19_dip"
                android:layout_marginTop="@dimen/comment_10_dip"
                android:text="单品抵用券"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_15_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/re_itemcoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip" />
        </LinearLayout>
        </com.ainisi.queenmirror.queenmirrorcduan.utils.ScrollInterceptScrollView>
    </com.ainisi.queenmirror.queenmirrorcduan.utils.customview.RefreshLoadMoreLayout>
</LinearLayout>