<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recycler_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_90_dip"
        android:layout_below="@id/view_one">


        <ImageView
            android:id="@+id/iv_purchase_title"
            android:layout_width="@dimen/comment_65_dip"
            android:layout_height="@dimen/comment_65_dip"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/comment_22_dip"
            app:srcCompat="@drawable/ic_sortrecyle_logo" />

        <TextView
            android:id="@+id/tv_purchase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_16_dip"
            android:layout_toRightOf="@id/iv_purchase_title"
            android:textSize="@dimen/comment_14_size"
            android:text="深层清洁加补水" />

        <TextView
            android:id="@+id/tv_purchase_presentprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_purchase_name"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_18_dip"
            android:layout_toRightOf="@id/iv_purchase_title"
            android:text="¥138"
            android:textStyle="bold"
            android:textColor="@color/gray_E7370C"
            android:textSize="@dimen/comment_15_size" />

        <TextView
            android:id="@+id/tv_purchase_originalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_purchase_name"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_22_dip"
            android:layout_toRightOf="@id/tv_purchase_presentprice"
            android:text="¥138"
            android:textSize="@dimen/comment_12_size" />

        <TextView
            android:id="@+id/tv_purchase_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_purchase_name"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:text="X1"
            android:textSize="@dimen/comment_16_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view_two"
        style="@style/dash_line"
        android:layout_below="@id/recycler_one"
        android:layout_marginEnd="@dimen/comment_22_dip"
        android:layout_marginStart="@dimen/comment_22_dip"
        android:layout_marginTop="@dimen/comment_13_dip" />


</LinearLayout>
