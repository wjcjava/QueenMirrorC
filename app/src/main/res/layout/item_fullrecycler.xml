<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/comment_6_dip"
    android:layout_marginEnd="@dimen/comment_6_dip"
    android:layout_marginTop="@dimen/comment_22_dip"
    android:layout_height="wrap_content"
    android:orientation="vertical">



            <ImageView
                android:id="@+id/iv_shop_title"
                android:layout_width="@dimen/comment_170_dip"
                android:layout_height="@dimen/comment_170_dip"
                android:src="@drawable/icon_home_beautiful"
                />



                <TextView
                    android:layout_below="@id/iv_shop_title"
                    android:id="@+id/sote_name"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="MOCO美容美发沙龙"
                    android:layout_marginTop="@dimen/comment_17_dip"
                    android:textColor="#000"
                    android:textSize="@dimen/comment_15_size" />
                    <TextView
                        android:layout_marginTop="@dimen/comment_2_dip"
                        android:id="@+id/tv_full_introduction"
                        android:layout_below="@id/sote_name"
                        android:textSize="@dimen/comment_13_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="苏州园区精致美甲店" />
                <TextView
                    android:id="@+id/tv_full_evaluate"
                    android:layout_marginTop="@dimen/comment_2_dip"
                    android:layout_below="@id/tv_full_introduction"
                    android:textSize="@dimen/comment_12_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23人好评" />



                    <TextView
                        android:id="@+id/sort_time"
                        android:layout_below="@id/tv_full_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_2_dip"
                        android:text="¥138"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/comment_13_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_9_dip"
                        android:textSize="@dimen/comment_12_size"
                        android:layout_marginStart="@dimen/comment_16_dip"
                        android:textColor="@color/alpha_05_black"
                        android:layout_toRightOf="@id/sort_time"
                        android:layout_below="@id/tv_full_evaluate"
                        android:text="¥268" />
</RelativeLayout>