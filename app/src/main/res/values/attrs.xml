<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference" />
    <attr name="dayNightBackgroundOne" format="color|reference" />
    <attr name="dayNightMineTopBackground" format="color|reference" />
    <attr name="dayNightOneTextColor" format="color|reference" />
    <attr name="dayNightTwoTextColor" format="color|reference" />
    <attr name="dayNightThreeTextColor" format="color|reference" />
    <attr name="dayNightFourTextColor" format="color|reference" />
    <attr name="dayNightFiveTextColor" format="color|reference" />
    <attr name="dayNightBackgroundDrawable" format="color|reference" />

    <declare-styleable name="DayNightMode">
        <attr name="dayNightBackgroundAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightBackgroundOneAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightMineTopBackgroundAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightOneTextColorAttr" format="string|reference"/><!--切换一级字体颜色属性-->
        <attr name="dayNightTwoTextColorAttr" format="string|reference"/><!--切换二级字体颜色属性-->
        <attr name="dayNightThreeTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightFourTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightFiveTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightBackgroundDrawableAttr" format="string|reference"/><!--切换背景图片属性-->
    </declare-styleable>
    <!--图形制作-->
    <declare-styleable name="MultiShapeView">
        <attr name="shape" format="enum">
            <enum name="rect" value="1"/>
            <enum name="circle" value="2"/>
        </attr>
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="cover_color" format="color" />
        <attr name="round_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>
    <style name="Widget_GifView"></style>
    <declare-styleable name="statusview">
        <attr name="complete" format="reference" />
        <attr name="error" format="reference" />
        <attr name="loading" format="reference" />
        <attr name="dismissOnComplete" format="boolean"/>
    </declare-styleable>

    <!--menu动画-->
    <declare-styleable name="DropDownMenu">
        <attr name="ddunderlineColor" format="color"/>
        <attr name="ddunderlineIndicatorColor" format="color"/>
        <attr name="dddividerColor" format="color"/>
        <attr name="ddtextSelectedColor" format="color"/>
        <attr name="ddtextUnselectedColor" format="color"/>
        <attr name="ddmenuBackgroundColor" format="color"/>
        <attr name="ddmaskColor" format="color"/>
        <attr name="ddmenuTextSize" format="dimension"/>
        <attr name="ddmenuHeight" format="dimension"/>
        <attr name="ddmenuSelectedIcon" format="reference"/>
        <attr name="ddmenuUnselectedIcon" format="reference"/>
    </declare-styleable>

    <!--跑马灯-->

    <declare-styleable name="MarqueeViewStyle">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="paddingTopBottom" format="dimension"/>
        <attr name="startDelayTime" format="integer"/>
        <attr name="reRepeatDelayTime" format="integer"/>
        <attr name="itemAnimationTime" format="integer"/>
    </declare-styleable>
    <attr name="aspectRatio" format="float|reference"/>
    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" />
    </declare-styleable>
    <declare-styleable name="AspectRatioRelativeLayout">
        <attr name="aspectRatio" />
    </declare-styleable>
    <declare-styleable name="PullZoomView">
        <attr name="zoomview" format="reference" />
        <attr name="headview" format="reference" />
        <attr name="contentview" format="reference" />
    </declare-styleable>
    <!--自定义文本编辑-->
    <declare-styleable name="DelEdit">
        <attr name="mTextSize" format="dimension"/>
        <attr name="mTextColor" format="color|reference"/>
        <attr name="mHintColor" format="color|reference"/>
        <attr name="mText" format="string"/>\
        <attr name="mHint" format="string"/>
        <attr name="mMaxLength" format="integer"/>
        <attr name="mShowAble" format="boolean"/>
        <attr name="mInputType" format="enum">
            <enum  name="text" value="0" />
            <enum  name="number" value="1"/>
            <enum  name="password" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="CustomRatingBar">
        <attr name="starDistance"  format="dimension"/>
        <attr name="starSize"  format="dimension"/>
        <attr name="starNum" format="integer" />
        <attr name="starEmpty" format="reference" />
        <attr name="starFill" format="reference" />
        <attr name="touchAble" format="boolean" />
        <attr name="mode" format="enum" >
            <enum name="single" value="1" />
            <enum name="random" value="2"/>
            <enum name="half" value="3"/>
        </attr>
        <attr name="ratingProgress"  format="integer"/>
    </declare-styleable>
    //支持上下拉所需
    <declare-styleable name="RefreshLoadMoreLayout">
        <attr name="rll_bg" format="color" />
        <attr name="rll_textcolor" format="color" />
        <attr name="rll_header_progress" format="reference" />
        <attr name="rll_arrow" format="reference" />
        <attr name="rll_header_progress_size" format="dimension" />
        <attr name="rll_header_arrow_width" format="dimension" />
        <attr name="rll_header_arrow_height" format="dimension" />
        <attr name="rll_header_title_size" format="dimension" />
        <attr name="rll_header_subtitle_size" format="dimension" />
        <attr name="rll_header_content_margin" format="dimension" />
        <attr name="rll_header_hint_normal" format="string" />
        <attr name="rll_header_hint_ready" format="string" />
        <attr name="rll_header_hint_loading" format="string" />
        <attr name="rll_header_last_time" format="string" />
        <attr name="rll_header_time_justnow" format="string" />
        <attr name="rll_header_time_minutes" format="string" />
        <attr name="rll_header_time_hours" format="string" />
        <attr name="rll_header_time_days" format="string" />
        <attr name="rll_header_height" format="dimension" />
        <attr name="rll_footer_content_margin" format="dimension" />
        <attr name="rll_footer_progress_size" format="dimension" />
        <attr name="rll_footer_title_size" format="dimension" />
        <attr name="rll_footer_progress" format="reference" />
        <attr name="rll_footer_hint_normal" format="string" />
        <attr name="rll_footer_hint_ready" format="string" />
        <attr name="rll_footer_hint_loading" format="string" />
        <attr name="rll_footer_no_more_data" format="string" />
        <attr name="rll_footer_height" format="dimension" />
    </declare-styleable>

</resources>